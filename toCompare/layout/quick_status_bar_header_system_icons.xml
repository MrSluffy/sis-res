<LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/quick_status_bar_system_icons" android:paddingTop="@dimen/status_bar_padding_top" android:clickable="true" android:clipChildren="false" android:clipToPadding="false" android:layout_width="fill_parent" android:layout_height="@android:dimen/progress_bar_height_material"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:systemui="http://schemas.android.com/apk/res-auto">
        <!--    
    res that uses in Substratum Icons Special A11 

  1. lb_details_description_body_min_lines -> integer
     *to move clock [center,Left,right]

  2. abc_action_bar_default_padding_end_material -> dimen
      *padding top

  3. abc_action_menu_layout -> layout
       *S.I.S Header Clock Layout

-->
        	    <!-- Copy this  and paste it to yours-->
    <LinearLayout android:gravity="@integer/lb_details_description_body_min_lines" android:layout_gravity="top" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/abc_action_bar_default_padding_end_material">
        <RelativeLayout android:layout_gravity="@integer/lb_details_description_body_min_lines" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <include android:layout_width="wrap_content" android:layout_height="wrap_content" layout="@layout/abc_action_menu_layout" />
